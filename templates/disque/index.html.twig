{% extends 'base.html.twig' %}

{% block body %}
{% for message in app.flashes("danger") %}
    <div class="alert alert-danger">
        {{message}}
    </div>
{% endfor %}
{% for message in app.flashes("success") %}
    <div class="alert alert-success">
        {{message}}
    </div>
{% endfor %}
<div class="container mt-4">
    <h1>Listes de disques</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">ID Disque</th>
                <th scope="col">Titre</th>
                <th scope="col">Id du chanteur</th>
                <th scope="col">Nom du chanteur</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
{% for item in disques %}
            <tbody>
                <tr class="table-primary">
                <td scope="row">{{item.id}}</td>
                <td>{{item.nameDisque}}</td>
                <td scope="row">{{item.id}}</td>
                <td>{{item.chanteur.name}}</td>
                <td><a href="{{path("app_disque_show",{"id":item.id} )}}" class="btn btn-primary">voir</a></td>
                <td><a href="{{path("app_disque_edit",{"id":item.id} )}}" class="btn btn-warning">Modifier</a></td>
                <td><a href="{{path("app_disque_delete",{"id":item.id} )}}" class="btn btn-warning">Supprimer</a></td>
            </tbody>
{% endfor %}
</div>

{% endblock %}
